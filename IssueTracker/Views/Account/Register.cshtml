

@model IssueTracker.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}




<div class="col-lg-8 mb-4 ml-5">
    <div class="card shadow mb-2">
        <div class="card-header text-center py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title.</h6>
        </div>

        <div class="p-5">
            <h2>@ViewBag.Title.</h2>
            <div class="row">
                <div class="col-md-8">
                    <section id="loginForm">

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4>Create a new account.</h4>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="form-group col-md-10">
                                 @Html.LabelFor(m => m.RoleName, new { @class = "col-md-10 control-label" })
                                <div class="col-md-10">
                                   @Html.DropDownList("Roles", null, htmlAttributes: new { @class = "form-control col-12" })

                                </div>
                            </div>

                            <div class="form-group col-md-10">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-10 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-10">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-10 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-10">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-10 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Register" />
                                </div>
                            </div>
                        }
                    </section>
                </div>
                <div class="col-md-2">
                    <section id="socialLoginForm">
                        <img src="~/Content/assets/image/logo.png" />
                    </section>
                </div>
            </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

        </div>
    </div>
