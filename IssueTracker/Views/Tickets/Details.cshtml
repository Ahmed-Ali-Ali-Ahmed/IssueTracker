@model  IssueTracker.Models.Ticket

@{
    ViewBag.Title = "Details";
}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"> @Model.Title</h1>


    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p hidden> @Model.Id </p> 
        <div class="col-lg-11 ml-5 mb-4">
            <div class="card shadow mb-2">
                <div class="card-header text-center py-3">

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sumbiter</th>
                                <th>Assigner</th>
                                <th>State</th>
                                <th>proiority</th>
                                <th>Date</th>
                            </tr>
                            </tr>
                        </thead>

                        <tbody>
                            <tr class="table-row" data-href="#">

                                @if (Model.Submitter != null)
                                {
                                    <td>@Model.Submitter.UserName</td>
                                }
                                else
                                {
                                    <td>@Model.Submitter</td>
                                }
                                @if (Model.Assigner != null)
                                {
                                    <td>@Model.Assigner.UserName</td>

                                }
                                else
                                {
                                    <td>@Model.Assigner</td>
                                }

                                <td>@Model.state</td>
                                <td>@Model.Priority</td>
                                <td>@Model.Created</td>

                            </tr>
                           

                        </tbody>
                    </table>
                </div>
                <div class="card-body text-primary ">
                    <div class="col-lg-12 mb-12  ">
                        <p class="h-100 ml-3">
                            @Model.Description
                        </p>
                    </div>

                </div>
                <div class="row mt-2 pb-2 pt-2">


                    <div class="col-lg-12 mb-12 text-center">
                        <button type="button" class="btn btn-primary"> @Html.ActionLink("update", "Edit", new { id = @Model.Id }, new {@class= "text-white" }) </button>
                    </div>
                </div>

                </div>
            </div>
        </div>

        <div class="col-lg-11 ml-5 mb-4">
            <div class="card shadow mb-2">
                <div class="card-header text-center py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Comments</h6>
                </div>
                <div class="card-body text-primary">
                    <div class="row">
                        @Html.Action("Create", "Comments",new { ticketId = Model.Id })
                       @Html.Action("Index", "Comments", new { ticketId = Model.Id })
                    </div>
            </div>
        </div>

    </div>


</div>